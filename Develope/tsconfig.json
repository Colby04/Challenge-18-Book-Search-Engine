{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}